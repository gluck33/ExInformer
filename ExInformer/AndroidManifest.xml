<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.openitr.exinformer"
          android:versionCode="1"
          android:versionName="1.0"
          android:installLocation="auto">
    <uses-sdk android:minSdkVersion="8"
            android:maxSdkVersion="17"
            android:targetSdkVersion="14"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application android:label="@string/app_name"
                 android:icon="@drawable/money">
        <activity android:name=".MainInfoActivity"
                  android:label="@string/app_title"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CurWidgetConfActivity">
             <intent-filter>
                 <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
             </intent-filter>
        </activity>

        <activity android:name=".BasePreferencesActivity"
                  android:label="@string/preference_title">
        </activity>


        <provider android:name="CurInfoProvider"
              android:authorities="ru.openitr.exinformer.currency"/>
    <receiver
        android:name=".CurrencyWidget"
        android:icon="@drawable/money"
        android:label="@string/app_name">
        <intent-filter>
            <action
                android:name="android.appwidget.action.APPWIDGET_UPDATE">
            </action>
        </intent-filter>
        <intent-filter>
            <action android:name="ru.openitr.exinformer.CURRENCY_UPDATED"/>
        </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/cur_widget_metadata">

            </meta-data>
        </receiver>

        <receiver android:name=".InfoRefreshReciever">
            <intent-filter>
                <action android:name="ru.openitr.exinformer.ACTION_REFRESH_INFO_ALARM"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service android:enabled="true" android:name=".InfoRefreshService"/>
    </application>
</manifest> 
