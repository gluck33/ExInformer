<?xml version="1.0" encoding="utf-8"?>
<ru.openitr.exinformer.DragSortListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/currencyListView"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:baselineAligned="false" android:clickable="true"
              android:longClickable="true" android:focusable="true" android:focusableInTouchMode="true">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/drag_handle" android:focusableInTouchMode="false"
            android:scaleType="center" android:visibility="visible" android:baselineAlignBottom="true"
            android:maxWidth="@dimen/vFlagColDim"
            />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Currency fullname"
                android:id="@+id/vNameView" android:layout_gravity="center_vertical|right" android:inputType="textMultiLine"
                android:layout_marginLeft="5dp" android:textSize="12dp"/>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vChÐ¡odeView" android:singleLine="true" android:text="USD"
                    android:layout_gravity="center_vertical" android:layout_marginLeft="@dimen/rowTextLeftMargin" android:width="@dimen/vChCodeColDim"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="30.721"
                    android:id="@+id/vCursView" android:layout_gravity="center_vertical" android:editable="false"
                    android:layout_marginLeft="5dp" android:width="@dimen/vCursColDim"/>
        </TableRow>
    </LinearLayout>
</LinearLayout>
</ru.openitr.exinformer.DragSortListView>